@model DAL.Padcast

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>ایجاد پادکست</h2>
        <hr />

@using (Html.BeginForm("Create", "Padcasts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.CountryId, htmlAttributes: new { @class = "lbl control-label col-2 text-center mt-1" })
        <div class="col-10">
            @Html.DropDownList("CountryId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.PadcastName, htmlAttributes: new { @class = "lbl control-label col-2 text-center mt-1" })
        <div class="col-10">
            @Html.EditorFor(model => model.PadcastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PadcastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "lbl control-label col-2 text-center mt-1" })
        <div class="col-10 text-center">
            <div class="checkbox">
                @Html.EditorFor(model => model.Type)
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.AddressFile, htmlAttributes: new { @class = "lbl control-label col-2 text-center mt-1" })
        <div class="col-10">
            <input name="file" class="form-control" type="file"/>
            @Html.ValidationMessageFor(model => model.AddressFile, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Picture, htmlAttributes: new { @class = "lbl control-label col-2 text-center mt-1" })
        <div class="col-10">
            <input name="photo" class="form-control" type="file" />
            @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-3 justify-content-center align-items-center">
        <input type="submit" value="ذخیره" class=" btn btn-success w-25" />
    </div>
</div>
}

<div class="text-center">
    @Html.ActionLink("برگشت", "Index", "", new { @class = "btn btn-dark w-25 mt-1" })
</div>
