@model DAL.PlayList

@{
    ViewBag.Title = "Delete";
}
<h5 class="text-danger">آیا از حذف اطلاعات مورد نظر مطمیین هستید؟</h5>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PlayListName) :
            @Html.DisplayFor(model => model.PlayListName)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Country.CountryName) :
            @Html.DisplayFor(model => model.Country.CountryName)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Visit) :
            @Html.DisplayFor(model => model.Visit)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.CreateDate) :
            @Html.DisplayFor(model => model.CreateDate)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Score) :
            @Html.DisplayFor(model => model.Score)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Type) :
            @Html.DisplayFor(model => model.Type)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Picture)
            <img src="~/Files/Photos/@Model.Picture" class="img-fluid shadow rounded-1" />
        </dt>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger w-100" />
        </div>
    }
</div>
