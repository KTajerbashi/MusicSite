@model DAL.PlayList

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "PlayLists", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.PlayListName, htmlAttributes: new { @class = "lbl control-label col-3 text-center mt-1" })
        <div class="col-9">
            @Html.EditorFor(model => model.PlayListName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PlayListName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.CountryId, htmlAttributes: new { @class = "lbl control-label col-2 text-center mt-1" })
        <div class="col-10">
            @Html.DropDownList("CountryId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Picture, htmlAttributes: new { @class = "lbl control-label col-3 text-center mt-1" })
        <div class="col-9">
            <input name="photo" type="file" class="form-control" />
            @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "lbl control-label col-3 text-center mt-1" })
        <div class="col-9">
            <div class="checkbox mt-2">
                @Html.EditorFor(model => model.Type)
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group d-flex flex-column justify-content-center align-items-center mt-1">
        <input type="submit" value="اضافه" class="btn btn-success w-50" />
    </div>
</div>
}
