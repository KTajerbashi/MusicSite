@{
    ViewBag.Title = "CreatePlayListSongs";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3 class="text-center">نام پلی لیست ها</h3>
            <select id="groupSelected" class="form-control">
                @foreach (var pList in ViewBag.PlayLists)
                {
                    <option value="@pList.playListId" class="form-control">@pList.Name</option>
                }
            </select>
        </div>
    </div>
    
    <h3 class=" text-center w-100 p-2 bg-primary bg-gradient text-light rounded-3 mt-2">آهنگ ها</h3>
    
    <div id="SearchSection" class="row">
        <input type="text" class="form-control" id="searchInput" placeholder="جستجو کنید ..." />
        <div id="ResultShow" class="">

        </div>
    </div>

    <div class="row SONGS">
        <div class="d-flex flex-row justify-content-between align-items-center flex-wrap text-center">
            @foreach (var song in ViewBag.Songs)
            {
                <div class="m-1" data-id="@song.songId">
                    <span class="btn btn-light m-1  h-100 ">
                        <p>@song.Name</p>
                        <img src="~/Files/Photos/@song.Picture" class="img-fluid" style="max-width:100px;" />
                        <p class="playIcon d-none"><i class=" fa fa-check fa-3x"></i></p>
                    </span>
                </div>
            }
        </div>
    </div>

</div>
<a class="btn btn-warning bg-gradient w-100 mt-3" id="Create">ذخیره پلی لیست</a>
