@model DAL.PlayListSongPKFK

@{
    ViewBag.Title = "CreatePlayListSongs";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="form-group d-flex flex-row justify-content-center mt-1">
        @Html.LabelFor(model => model.PlayList.PlayListName, htmlAttributes: new { @class = "lbl control-label col-1 text-center mt-1" })
        <div class="col-6">
            @Html.DropDownList("Playlists", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PlayList.PlayListName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div id="search-panel">
        <div id="search-panel-control">
            <input id="search-word" placeholder="جستجو کنید ..." />
            <span><i id="search-icon-pk" class="fa fa-search"></i></span>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row d-flex flex-md-column flex-lg-row justify-content-between align-items-center">
            <a href="@Url.Action("ShowPlayListSongs","PlayLists")" class="col-sm-10 col-md-6 btn btn-primary mt-1">نمایش همه پلی لیست ها با آهنگ های</a>
            <button id="SavePlayList" class="col-sm-10 col-md-6 col-lg-3 btn btn-success mt-1">دخیره</button>
            <button class="col-12 btn btn-warning shadow rounded-5 fw-bolder mt-1">تمام آهنگ های سایت</button>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            @foreach (var item in ViewBag.Songs)
            {
                <div class="col-sm-3 col-md-3 col-lg-1 col-3 mt-3">
                    <div class="song-items-PK p-1 text-center rounded-2" data-id="@item.SongId">
                        <h6 class="text-primary">@item.Album.Singer.SingerName</h6>
                        <h6 class="text-light">@item.SongName</h6>
                        <img src="~/Files/Photos/@item.Picture" class="img-fluid rounded-3 img-songs-items" alt="Picture" />
                    </div>
                </div>
            }
        </div>
    </div>

</div>

