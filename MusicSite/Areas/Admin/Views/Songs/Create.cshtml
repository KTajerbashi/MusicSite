@model DAL.Song

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>اضافه کرن اطلاعات آهنگ</h2>
    <hr />


@using (Html.BeginForm("Create","Songs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal text-center">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.SongName, htmlAttributes: new { @class = "control-label col-2 lbl" })
        <div class="col-10">
            @Html.EditorFor(model => model.SongName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SongName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.GroupId, htmlAttributes: new { @class = "control-label col-2 lbl" })
        <div class="col-10">
            @Html.DropDownList("GroupId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.AlbumId, htmlAttributes: new { @class = "control-label col-2 lbl" })
        <div class="col-10">
            @Html.DropDownList("AlbumId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AlbumId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-2 lbl" })
        <div class="col-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Type)
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Remix, htmlAttributes: new { @class = "control-label col-2 lbl" })
        <div class="col-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Remix)
                @Html.ValidationMessageFor(model => model.Remix, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.AddressFile, htmlAttributes: new { @class = "control-label col-2 lbl" })
        <div class="col-10">
            <input type="file" class="form-control" name="fileUp" />
            @Html.ValidationMessageFor(model => model.AddressFile, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Picture, htmlAttributes: new { @class = "control-label col-2 lbl" })
        <div class="col-10">
            <input type="file" class="form-control" name="photoUp" />
            @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-3 align-items-center justify-content-center">
        <input type="submit" value="ذخیره" class="btn btn-success w-25" />
    </div>

</div>
}

<div class="form-group d-flex flex-row mt-1 align-items-center justify-content-center">
    @Html.ActionLink("برگشت", "Index", "", new { @class = "btn btn-dark w-25 my-2" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
