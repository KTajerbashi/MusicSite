@model DAL.Song

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>اضافه کرن اطلاعات آهنگ</h2>


@using (Html.BeginForm("Create","Songs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "lbl control-label col-md-2 text-center mt-1" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.GroupId, htmlAttributes: new { @class = "lbl control-label col-md-2 text-center mt-1" })
        <div class="col-md-10">
            @Html.DropDownList("GroupId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.SingerId, htmlAttributes: new { @class = "lbl control-label col-md-2 text-center mt-1" })
        <div class="col-md-10">
            @Html.DropDownList("SingerId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SingerId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "lbl control-label col-md-2 text-center mt-1" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "lbl control-label col-md-2 text-center mt-1" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Type)
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.AddressFile, htmlAttributes: new { @class = "lbl control-label col-md-2 text-center mt-1" })
        <div class="col-md-10">
            <input type="file" class="form-control" name="fileUp" />
            @Html.ValidationMessageFor(model => model.AddressFile, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.Picture, htmlAttributes: new { @class = "lbl control-label col-md-2 text-center mt-1" })
        <div class="col-md-10">
            <input type="file" class="form-control" name="photoUp" />
            @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group d-flex flex-row mt-3 align-items-center justify-content-center">
        <div class="col-md-offset-2 col-md-10 text-center">
            <input type="submit" value="ذخیره" class="btn btn-success w-50" />
        </div>
    </div>

</div>
}

<div class="form-group d-flex flex-row mt-1 align-items-center justify-content-center">
    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-dark w5-0" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
