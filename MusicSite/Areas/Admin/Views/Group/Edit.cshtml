@model DAL.Group

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.GroupId)
    @Html.HiddenFor(model => model.CreateDate)
    @Html.HiddenFor(model => model.Visit)

    <div class="form-group d-flex flex-row mt-1">
        @Html.LabelFor(model => model.GroupName, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
    <div class="form-group d-flex flex-row mt-3 justify-content-center align-items-center">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="ویرایش" class="btn btn-warning w-100 mt-2" />
        </div>
    </div>
}
