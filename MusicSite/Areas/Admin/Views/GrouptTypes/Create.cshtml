@model DAL.GrouptType

@{
    ViewBag.Title = "Create";
}
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group d-flex flex-row mt-1">
                @Html.LabelFor(model => model.groupName, htmlAttributes: new { @class = "lbl control-label col-md-2 text-center mt-1" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.groupName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.groupName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex flex-row mt-1">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "lbl control-label col-md-2 text-center mt-1" })
                <div class="col-md-10 mt-2">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Type)
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group d-flex flex-column justify-content-center align-items-center">
                <div class="col-md-offset-2 col-md-10 text-center">
                    <input type="submit" value="Create" class="btn btn-success w-50" />
                </div>
            </div>
        </div>
    }

</div>
