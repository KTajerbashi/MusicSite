@model DAL.Admin

@{
    ViewBag.Title = "Delete";
}

<div>
    <h5 class="text-danger">شما برای حذف ادمین ذیل مطمیین هستید؟</h5>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name) :
                @Html.DisplayFor(model => model.Name)
            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.Family) :
                @Html.DisplayFor(model => model.Family)
            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.Email) :
                @Html.DisplayFor(model => model.Email)
            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.Phone) :
                @Html.DisplayFor(model => model.Phone)

            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.Username) :
                @Html.DisplayFor(model => model.Username)

            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.Password) :
                @Html.DisplayFor(model => model.Password)
            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.CreateDate) :
                @Html.DisplayFor(model => model.CreateDate)
            </dt>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color d-flex flex-column justify-content-center align-items-center">
                <input type="submit" value="حذف" class="btn btn-danger w-100" />
            </div>
        }
    </div>

</div>