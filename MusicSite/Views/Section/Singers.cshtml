@model IEnumerable<DAL.ViewModels.ViewSinger>

<div class="container-fluid">
    <div class="d-flex flex-row justify-content-between flex-wrap">
        @foreach (var item in Model)
        {
            <div class="SingerItem">
                <a href="@Url.Action("PlaySingerSongs","Section",new {id=item.SingerId})" class="d-flex flex-column justify-content-between">
                    <img src="~/Files/Photos/@item.Picture" class="img-fluid rounded-2 shadow" style="height: 150px; width: 150px; " />
                    <span class="w-100 bg-primary text-light p-1 rounded-2 mt-2">@item.SingerName</span>
                </a>
            </div>
        }
    </div>
</div>
