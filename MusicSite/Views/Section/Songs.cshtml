<div class="container-fluid">
    <div class="row d-flex flex-column align-items-center">
        <div class="w-50" id="search-panel">
            <div id="search-panel-control" class="rounded-5">
                <input id="search-word" placeholder="جستجو کنید ...">
                <span><i id="search-icon-pk" class="fa fa-search"></i></span>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in ViewBag.List)
        {
            <div class="col-2 mt-2">
                <a class="song-item-modal" href="@Url.Action("PlaySong","Section",new {id=item.SongId})">
                    <img src="~/Files/Photos/@item.Picture" class="img-fluid" style="width:100px;height:100px;" />
                    <span class="bg-dark text-warning bg-gradient w-75 rounded-5 py-1 my-2">@item.SongName</span>
                    <span class="bg-dark text-warning bg-gradient w-75 rounded-5 py-1">@item.SingerName</span>
                </a>
            </div>
        }
    </div>
</div>
