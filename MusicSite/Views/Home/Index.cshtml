
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="col-sm-12 col-md-2 p-3">
    <div class="bg-dark bg-gradient text-light p-2 rounded-2 overflow-auto" style="height: 550px;">
        <h6 class="bg-warning text-dark bg-gradient p-1 rounded-5 sticky-top">لیست در حال پخش</h6>
        <ul class="list-group">
            @foreach (var item in ViewBag.List)
            {
                <li class="list-group-item-list d-flex flex-row justify-content-between" onclick="PlayMusicAjax(@item.SongId)">
                    <span>@item.SongName</span>
                    <span>@item.SingerName</span>
                    <span>@item.Album.AlbumName</span>
                </li>
            }
        </ul>
    </div>
</div>